<div class="hero">
  <h2>Collections</h2>
</div>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<div class="main-content">
  <div class="search">
    <%= form_with(url: collections_path, method: "get", local: true) do %>
  <p class="new-sect">Search for Collections</p>
      <%= text_field_tag(:search, params[:search]) %>
      <%= select_tag(:search_type, options_for_select(["Account Number", "Last Name", "Date of Birth"])) %>
      <%= submit_tag ("Search") %><br>
    <% end %>
    <% if current_user && current_user.admin %>
      <%#= Show All Button %>
    <% end %>
  </div>
  <div class="break-line"></div>
</div>
  <% if @collection %>
    <div class="search-container">
      <%= render 'collections/show' %>
    </div>
  <% end %>