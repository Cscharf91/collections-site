<%= form_with(model: @collection, local: true) do |form| %>
  <% if @collection.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@collection.errors.count, "error") %> prohibited this collection from being saved:</h2>

      <ul>
      <% @collection.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-grid">
    <div class="field">
      <%= form.label :fname, "First Name" %>
      <%= form.text_field :fname %>
    </div>

    <div class="field">
      <%= form.label :lname, "Last Name" %>
      <%= form.text_field :lname %>
    </div>
    
    <div class="field">
      <%= form.label :account_number %>
      <%= form.number_field :account_number %>
    </div>



    <div class="field">
      <%= form.label :money_due %>
      <%= form.text_field :money_due %>
    </div>

    <div class="field">
      <%= form.label :money_paid %>
      <%= form.text_field :money_paid %>
    </div>

    <div class="field">
      <%= form.label :total_due %>
      <%= form.text_field :total_due %>
    </div>

    <div class="field">
      <%= form.label :phone %>
      <%= form.text_field :phone %>
    </div>

    <div class="field">
      <%= form.label :phone2 %>
      <%= form.text_field :phone2 %>
    </div>

    <div class="field">
      <%= form.label :phone3 %>
      <%= form.text_field :phone3 %>
    </div>

    <div class="field">
      <%= form.label :practice_id %>
      <%= form.select(:practice_id, options_for_select(@practices)) %>
    </div>


    <div class="field">
      <%= form.label :notes %>
      <%= form.text_field :notes %>
    </div>

    <div class="field">
      <%= form.label :scan, "Upload Scan" %>
      <%= form.file_field :scan %>
    </div>

    <div class="actions">
      <%= form.submit :class => "submit-btn" %>
    </div>

  </div>
<% end %>
